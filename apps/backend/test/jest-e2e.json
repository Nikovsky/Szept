{
  "moduleFileExtensions": ["ts", "js", "json"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": ["ts-jest", { "tsconfig": "tsconfig.test.json" }]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@szept/types$": "<rootDir>/../../packages/types/index.ts"
  }
}
